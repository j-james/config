#################
# shell options #
#################

shopt -s checkwinsize
shopt -s cmdhist
shopt -s complete_fullquote
shopt -s expand_aliases
shopt -s extglob
shopt -s extquote
shopt -s force_fignore
shopt -s globasciiranges
shopt -s histappend
shopt -s interactive_comments
shopt -s progcomp
shopt -s promptvars
shopt -s sourcepath

set -o noclobber

###############
# definitions #
###############

alias bat='bat --pager="less -FR" --paging never'
alias config='git --git-dir=$HOME/.config/.git --work-tree=$HOME/.config'
alias consoleds='consoleds --alliance-colour red --alliance-position 1 --team-number 4915'
alias cp='cp -i'
alias df='df -h'
alias link='ln'
alias ls='ls --color=auto'
alias mocp='mocp --config ~/.config/moc/config'
alias more='less'
alias prepac='pakku -Ssq | fzf --preview "pakku -Si {}" --layout=reverse'
alias prepac-local='pakku -Qq | fzf --preview "pakku -Qil {}" --layout=reverse'
alias rm='rm --interactive'
alias starwars='telnet towel.blinkenlights.nl'
alias todo='nvim ~/Documents/todo.md'
alias vim='nvim --noplugin'
alias wallpaper='feh --no-fehbg --bg-scale'
alias worldmap='telnet mapscii.me'

#################
# abbreviations #
#################

alias cds='consoleds'
alias md='micro'
